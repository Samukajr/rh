# ========================================
# SERVIDOR & PORTA
# ========================================
PORT=3000
NODE_ENV=production

# ========================================
# BANCO DE DADOS (PostgreSQL)
# ========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rhplus
DB_USER=rhplus_user
DB_PASSWORD=sua_senha_segura_aqui
DB_DIALECT=postgres

# ========================================
# JWT & AUTENTICAÇÃO
# ========================================
JWT_SECRET=sua_chave_secreta_super_segura_aqui_min_32_caracteres
JWT_EXPIRE=24h
JWT_REFRESH_SECRET=sua_chave_refresh_super_segura_aqui
JWT_REFRESH_EXPIRE=7d

# ========================================
# FRONT-END
# ========================================
FRONTEND_URL=http://localhost:3001

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# ========================================
# EMAIL (Opcional)
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@gmail.com
SMTP_PASS=sua-senha-de-app
SMTP_FROM=noreply@rhplus.com

# ========================================
# AWS S3 (Opcional para uploads em produção)
# ========================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=sua_chave_aqui
AWS_SECRET_ACCESS_KEY=sua_secreta_aqui
AWS_S3_BUCKET=seu-bucket-aqui

# ========================================
# REDIS (Opcional)
# ========================================
REDIS_URL=redis://localhost:6379

# ========================================
# LOGS
# ========================================
LOG_LEVEL=info
LOG_FORMAT=combined
